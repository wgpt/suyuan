.top-img
  width 100%
  height 348rpx
  border-radius 15rpx
  overflow hidden

.main-bar
  width 100%
  display flex
  margin 40rpx 0 50rpx 0
  flex-direction row

  navigator
    display flex
    flex  1
    text-align center
    flex-direction column
    align-items center
    font-size 30rpx
    image
      width 75rpx
      height 69rpx
      margin-bottom 20rpx

.count
  display flex
  width 100%
  border 1px solid #EDEDED
  border-radius 8px
  box-shadow 0 0 3px #EDEDED
  view
    flex 1
    margin 20rpx 0
    padding 5rpx 0
    text-align center
    font-size 30rpx
    border-right 1px solid #EDEDED
    &:last-of-type
      border-right none
    .count-top
      display block
      margin-top 40rpx
      font-size 24rpx
      .count-c
        color #299FE6
        display inline-block
        font-size 60rpx
      .count-c1
        color #17BD7D
      .count-c2
        color #FFAE00

.main-bottom
  width 100%
  border-radius 15rpx
  margin-top 60rpx
  height 227rpx

.ngt
  width 100%
  box-sizing border-box
  navigator,.title
    display flex
    height 77rpx
    line-height 77rpx
    justify-content space-between
    align-items center
    border-bottom 1px solid #F1F1F1
    &:last-of-type
      border-bottom none
    image
      width 17rpx
      height 30rpx
      margin-right 20rpx
    text
      color #101013
      font-size 32rpx
      text-indent 50rpx