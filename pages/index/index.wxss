.flex-x {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.flex-y,
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .userinfo-avatar {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.container .userinfo-nickname {
  display: block;
  text-align: center;
  margin-top: 10px;
}
