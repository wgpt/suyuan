.pt
  position fixed
  top 0
  right 0
  left 0
  background-color #fff
  z-index 2
  .top
    width 100%
    display flex
    border-bottom .5px solid #f1f1f1
    font-size 30rpx
    navigator,view
      flex 1
      text-align center
      height 80rpx
      line-height 80rpx

    view
      text
        display inline-block
        height 100%
        padding 0 10rpx
        color #17BD7D
        border-bottom 1px solid #17BD7D

.nav
  width 490rpx
  margin 30rpx auto 10rpx auto
  border 1px solid #17BD7D
  border-radius 8px
  height 65rpx
  line-height 65rpx
  letter-spacing 2rpx
  display flex
  overflow hidden
  text
    flex 1
    text-align center
    font-size 30rpx
    height 100%
    display inline-block
    border-right .5px solid #f1f1f1
    &:last-of-type
      border-right none
    &.selt
      background-color #17BD7D
      color #fff

.all
  width 100%
  text-align right
  border-bottom 1px solid #f1f1f1
  height 60rpx
  line-height @height
  text
    color #12A7EC
    font-size 24rpx
    margin-right 30rpx

scroll-view
  margin-top 270rpx
  width 100%
  padding 0 20rpx 120rpx 20rpx
  box-sizing border-box
  overflow hidden
  .nator
    display flex
    justify-content center
    align-items center
    min-height 400rpx
    text
      text-align center
      text
        display inline-block
        width 50rpx
        height @width
        line-height @height
        text-align center
        border 1px solid #f1f1f1
        border-radius 50%
        margin-right 20rpx
        vertical-align middle
  .list
    position relative
    margin-bottom 60rpx
    width 47%
    float left
    overflow hidden
    &:nth-child(2n)
      margin-left 6%

    .img
      width 100%
      height 320rpx
      text-align center
      line-height @height
      image,video
        vertical-align middle
        max-height 100%
        max-width 100%
        display block
    text
      display block
      width 100%
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      &.t1
        font-size 24rpx
        margin 25rpx 0 10rpx 0
      &.t2
        font-size 20rpx
        color #959595

    .t3
      width 100%
      display flex
      justify-content space-between
      margin-top 20rpx
      navigator,view
        width 45%
        height 50rpx
        line-height @height
        border-radius 2px
        overflow hidden
        color #ffffff
        background-color #17BD7D
        text-align center
      view
        background-color #ED9C00
    .bar
      position absolute
      top 20rpx
      right 20rpx
      height 30rpx
      line-height @height
      width @height
      text-align center
      border 1rpx solid #17BD7D
      color #17BD7D
      border-radius 50%
      background-color #ffffff
      font-size 20rpx


.bt
  position fixed
  z-index 2
  height 100rpx
  bottom 0
  left 0
  right 0
  border-top 1px solid #f1f1f1
  display flex
  justify-content space-between
  padding 0 20rpx
  background-color #fff
  view
    width 47%
    height 60rpx
    line-height @height
    background-color #17BD7D
    text-align center
    color #ffffff
    letter-spacing 3rpx
    margin-top 20rpx
    &:last-of-type
      background-color #ED9C00

