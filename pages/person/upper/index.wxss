.top {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  font-weight: bolder;
  border-bottom: 1px solid #f1f1f1;
  padding-left: 40rpx;
  box-sizing: border-box;
}
.list {
  margin: 20rpx auto;
  width: 100%;
  border-radius: 5rpx;
  padding: 20rpx 40rpx 20rpx 40rpx;
  box-sizing: border-box;
  letter-spacing: 3rpx;
}
.list view {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.list view text {
  font-size: 30rpx;
  width: 160rpx;
  text-align: right;
  color: #101013;
}
.list view text.t1 {
  flex: 1;
  text-align: left;
  text-indent: 1em;
  font-size: 26rpx;
}
.list view input,
.list view picker {
  flex: 1;
  font-size: 26rpx;
  margin-left: 30rpx;
  height: 100%;
  background-color: #ebebf2;
  text-indent: 1em;
  border-radius: 5px;
}
.list view.photo button {
  display: inline-block;
  padding-left: 0;
  padding-right: 0;
  margin-left: 30rpx;
}
.list view.photo button.add {
  height: 60rpx;
  line-height: 60rpx;
  width: 230rpx;
  background-color: #ebebf2;
  text-align: center;
  font-size: 24rpx;
}
.sure {
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #17bd7d;
  color: #fff;
  font-size: 30rpx;
  border-radius: 3px;
  letter-spacing: 3rpx;
  margin: 60rpx auto 60rpx auto;
}
