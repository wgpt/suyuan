.top
  width 100%
  height 70rpx
  line-height 70rpx
  font-size 30rpx
  font-weight bolder
  border-bottom 1px solid #f1f1f1
  padding-left 40rpx
  box-sizing border-box
.list
  margin 20rpx auto
  width 100%
  border-radius 5rpx
  padding 20rpx 40rpx 20rpx 40rpx
  box-sizing border-box
  letter-spacing 3rpx
  view
    width 100%
    height 60rpx
    line-height @height
    display flex
    font-size 24rpx
    margin-top 20rpx
    //border-bottom 1px solid #f1f1f1
    text
      //color #3C801F
      font-size 30rpx
      width 160rpx
      text-align right
      color #101013
      &.t1
        flex 1
        text-align left
        text-indent 1em
        font-size 26rpx
    input,picker
      flex 1
      font-size 26rpx
      margin-left 30rpx
      height 100%
      background-color #EBEBF2
      text-indent 1em
      border-radius 5px

    &.photo

      button
        display inline-block
        padding-left 0
        padding-right 0
        margin-left 30rpx
        &.add
          height 60rpx
          line-height 60rpx
          width 230rpx
          background-color #EBEBF2
          text-align center
          font-size 24rpx

.sure
  width 90%
  height 70rpx
  line-height @height
  text-align center
  background-color #17BD7D
  color #ffffff
  font-size 30rpx
  border-radius 3px
  letter-spacing 3rpx
  margin 60rpx auto 60rpx auto