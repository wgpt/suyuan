page .container
  padding 0

.top-icon
  width 100%
  display flex
  padding-bottom 30rpx
  navigator
    display flex
    flex-direction column
    align-items center
    flex 1
    text-align center
    image
      width 95rpx
      height 95rpx
      margin 40rpx 0 20rpx 0

    text
      color #101013
      font-size 30rpx

.ah
  width 100%
  height 8px
  background-color #F1F1F1

.ngt
  width 100%
  box-sizing border-box
  navigator,.title
    display flex
    height 77rpx
    line-height 77rpx
    justify-content space-between
    align-items center
    border-bottom 1px solid #F1F1F1
    &:last-of-type
      border-bottom none
    image
      width 17rpx
      height 30rpx
      margin-right 20rpx
    text
      color #101013
      font-size 32rpx
      text-indent 50rpx