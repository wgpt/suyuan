.top
  width 100%
  height 70rpx
  line-height 70rpx
  font-size 30rpx
  font-weight bolder
  border-bottom 1px solid #f1f1f1

.list
  margin 20rpx auto
  width 90%
  box-shadow 0 0 8px #f1f1f1
  border-radius 5rpx
  padding 20rpx 20rpx 20rpx 20rpx
  box-sizing border-box
  view
    width 100%
    height 80rpx
    line-height @height
    display flex
    align-items center
    font-size 24rpx
    border-bottom 1px solid #f1f1f1
    text
      color #3C801F
      font-size 28rpx
    input,picker,textarea
      flex 1
      font-size 28rpx
      margin-left 30rpx
      &.none
        color #808080
    textarea
      height 200rpx
      line-height 1.1em
    &.photo
      display block
      min-height 160rpx
      height auto
      padding-bottom 40rpx
      overflow hidden
      button
        &.add
          height 60rpx
          line-height 60rpx
          width 200rpx
          text-align center
          font-size 28rpx
      image,video
        display block
        width 400rpx
        height 400rpx
        margin 25rpx auto 30rpx auto
      video
        height 300rpx

.sure
  width 90%
  height 70rpx
  line-height @height
  text-align center
  background-color #17BD7D
  color #ffffff
  font-size 30rpx
  border-radius 3px
  letter-spacing 3rpx
  margin 60rpx auto 60rpx auto