.top {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: bolder;
  border-bottom: 1px solid #f1f1f1;
}
.list {
  margin: 20rpx auto;
  width: 90%;
  box-shadow: 0 0 8px #f1f1f1;
  border-radius: 5rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
}
.list view {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  border-bottom: 1px solid #f1f1f1;
}
.list view text {
  color: #3c801f;
  font-size: 32rpx;
}
.list view input,
.list view picker,
.list view textarea {
  flex: 1;
  font-size: 32rpx;
  margin-left: 30rpx;
}
.list view input.none,
.list view picker.none,
.list view textarea.none {
  color: #808080;
}
.list view textarea {
  height: 200rpx;
  line-height: 1.1em;
}
.list view.photo {
  display: block;
  min-height: 160rpx;
  height: auto;
  padding-bottom: 40rpx;
  overflow: hidden;
}
.list view.photo button.add {
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  text-align: center;
  font-size: 32rpx;
}
.list view.photo image,
.list view.photo video {
  display: block;
  width: 400rpx;
  height: 400rpx;
  margin: 25rpx auto 30rpx auto;
}
.list view.photo video {
  height: 300rpx;
}
.sure {
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #17bd7d;
  color: #fff;
  font-size: 34rpx;
  border-radius: 3px;
  letter-spacing: 3rpx;
  margin: 60rpx auto 60rpx auto;
}
