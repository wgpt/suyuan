page .container {
  padding: 10rpx 30rpx;
}
.notice {
  color: #ff0024;
  font-size: 32rpx;
}
.mes {
  width: 100%;
  margin-top: 40rpx;
}
.mes input {
  display: block;
  border-bottom: 0.5px solid #adadad;
  padding-left: 30rpx;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}
.mes input .pl {
  color: #adadad;
}
.mes .images {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 10rpx;
  box-sizing: border-box;
}
.mes .images image {
  width: 90%;
}
.mes .images view {
  font-size: 32rpx;
  margin-top: 30rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(102,102,102,0.4);
  border-radius: 10rpx;
}
.mes .number {
  position: relative;
}
.mes .number .code {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  background-color: #ff3c00;
  border-radius: 3px;
  color: #fff;
  padding: 20rpx 20rpx;
  font-size: 30rpx;
}
.mes .number .send {
  background-color: #666;
}
.go {
  margin-top: 60rpx;
  font-size: 32rpx;
  width: 100%;
  height: 77rpx;
  line-height: 77rpx;
  text-align: center;
  background-color: #17bd7d;
  color: #fff;
  letter-spacing: 5px;
  border-radius: 3px;
}
/********************************************************* 获取用户信息授权提示窗口 */
.userinfo_box {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 9999;
}
.userinfo_prompt_box {
  width: 80%;
  margin: 32vh auto 0;
  background: #fff;
  border-radius: 10rpx;
  font-size: 36rpx;
  text-align: center;
  overflow: hidden;
}
.userinfo_title {
  color: #222;
  padding: 30rpx 0 20rpx;
}
.userinfo_text {
  font-size: 34rpx;
  color: #999;
  padding: 30rpx 10rpx;
  border-bottom: 2rpx solid #e6e6e7;
}
.userinfo_btn button {
  font-size: 34rpx;
  width: 50%;
  line-height: 90rpx;
  display: inline-block;
  box-sizing: border-box;
  border: none;
  border-radius: 0;
  background-color: #fff;
  margin: 0;
  padding: 0;
  overflow: unset;
}
.userinfo_btn button::after {
  content: none;
}
