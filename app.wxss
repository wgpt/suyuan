/**app.wxss**/

page .container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10px 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular,Arial, Helvetica,sans-serif;
} 

button.loading{
  background-color: inherit;
  border: none;
  box-shadow: none;
  font-size: 28rpx;
  border-radius: 0;
  width:100%;
}

button.loading::after{
  border: none;
}